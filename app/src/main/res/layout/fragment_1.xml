<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model1"
            type="ru.mobiskif.MyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinnerLPU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/lpu" />

        <TextView
            android:id="@+id/textViewPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="?attr/listPreferredItemPaddingStart"
            android:text='@{"Карточка №: "+model1.cidPat}' />

        <Spinner
            android:id="@+id/spinnerSpec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spec" />

    </LinearLayout>

</layout>

